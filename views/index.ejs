<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Produtos - SQLite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body { background: #f8f9fa; padding-top: 20px; }
        .card { border-radius: 10px; margin-bottom: 20px; }
        .badge { font-size: 0.8em; }
        .stats-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
        .btn-action { width: 80px; }
    </style>
</head>
<body>
    <div class="container">
        <!-- CabeÃ§alho -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0">ðŸ“¦ CRUD Produtos</h1>
                <p class="text-muted mb-0">Banco de dados: SQLite</p>
            </div>
            <div>
                <a href="/novo" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Produto
                </a>
                <a href="/api/produtos" target="_blank" class="btn btn-outline-secondary">
                    <i class="bi bi-code-slash"></i> API
                </a>
            </div>
        </div>

        <!-- EstatÃ­sticas -->
        <% if (estatisticas) { %>
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h4 class="mb-0"><%= estatisticas.total || 0 %></h4>
                        <p class="mb-0">Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h4 class="mb-0"><%= estatisticas.com_estoque || 0 %></h4>
                        <p class="mb-0">Com Estoque</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h4 class="mb-0"><%= estatisticas.estoque_baixo || 0 %></h4>
                        <p class="mb-0">Estoque Baixo</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h4 class="mb-0">R$ <%= (estatisticas.preco_medio || 0).toFixed(2) %></h4>
                        <p class="mb-0">PreÃ§o MÃ©dio</p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Sistema de Busca -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="search" 
                               placeholder="Buscar..." value="<%= filtros.search %>">
                    </div>
                    <div class="col-md-2">
                        <select class="form-control" name="categoria">
                            <option value="">Todas Categorias</option>
                            <% categorias.forEach(cat => { %>
                                <option value="<%= cat %>" <%= filtros.categoria === cat ? 'selected' : '' %>>
                                    <%= cat %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" step="0.01" class="form-control" name="minPrice" 
                               placeholder="PreÃ§o MÃ­n" value="<%= filtros.minPrice %>">
                    </div>
                    <div class="col-md-2">
                        <input type="number" step="0.01" class="form-control" name="maxPrice" 
                               placeholder="PreÃ§o MÃ¡x" value="<%= filtros.maxPrice %>">
                    </div>
                    <div class="col-md-2">
                        <select class="form-control" name="ativo">
                            <option value="">Todos Status</option>
                            <option value="true" <%= filtros.ativo === 'true' ? 'selected' : '' %>>Ativo</option>
                            <option value="false" <%= filtros.ativo === 'false' ? 'selected' : '' %>>Inativo</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
                <% if (filtros.search || filtros.categoria || filtros.minPrice || filtros.maxPrice || filtros.ativo) { %>
                    <div class="mt-2">
                        <a href="/" class="btn btn-sm btn-outline-secondary">
                            Limpar filtros
                        </a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Lista de Produtos -->
        <% if (produtos.length === 0) { %>
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>
                Nenhum produto encontrado.
                <% if (filtros.search || filtros.categoria || filtros.minPrice || filtros.maxPrice || filtros.ativo) { %>
                    <a href="/" class="alert-link">Limpar filtros</a>
                <% } else { %>
                    <a href="/novo" class="alert-link">Cadastre o primeiro produto</a>
                <% } %>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Categoria</th>
                            <th>PreÃ§o</th>
                            <th>Estoque</th>
                            <th>Status</th>
                            <th class="text-center">AÃ§Ãµes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                        <tr>
                            <td>#<%= produto.id %></td>
                            <td>
                                <strong><a href="/produtos/<%= produto.id %>" class="text-decoration-none">
                                    <%= produto.nome %>
                                </a></strong>
                                <% if (produto.descricao) { %>
                                    <br><small class="text-muted"><%= produto.descricao.substring(0, 50) %>...</small>
                                <% } %>
                            </td>
                            <td>
                                <span class="badge bg-secondary"><%= produto.categoria || 'N/A' %></span>
                            </td>
                            <td>
                                <strong class="text-success">R$ <%= produto.preco.toFixed(2).replace('.', ',') %></strong>
                            </td>
                            <td>
                                <% if (produto.estoque > 10) { %>
                                    <span class="badge bg-success"><%= produto.estoque %> uni</span>
                                <% } else if (produto.estoque > 0) { %>
                                    <span class="badge bg-warning"><%= produto.estoque %> uni</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Esgotado</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (produto.ativo) { %>
                                    <span class="badge bg-success">Ativo</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Inativo</span>
                                <% } %>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="/produtos/<%= produto.id %>" class="btn btn-outline-info" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/produtos/<%= produto.id %>/editar" class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/produtos/<%= produto.id %>/excluir" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger" 
                                                onclick="return confirm('Excluir este produto?')" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3 text-muted">
                <i class="bi bi-database me-1"></i>
                Total: <strong><%= produtos.length %></strong> produtos listados
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>