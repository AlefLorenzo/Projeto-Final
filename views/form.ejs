<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #f8f9fa; padding-top: 40px; }
        .form-card { max-width: 600px; margin: 0 auto; border-radius: 15px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-card card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><%= titulo %></h4>
            </div>
            <div class="card-body">
                <% const isEdit = produto !== null; %>
                <form action="<%= isEdit ? `/produtos/${produto.id}/atualizar` : '/produtos' %>" method="POST">
                    
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome do Produto *</label>
                        <input type="text" class="form-control" id="nome" name="nome" 
                               value="<%= produto ? produto.nome : '' %>" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <textarea class="form-control" id="descricao" name="descricao" rows="3"><%= produto ? produto.descricao : '' %></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="preco" class="form-label">Preço (R$) *</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" step="0.01" class="form-control" id="preco" name="preco" 
                                       value="<%= produto ? produto.preco : '' %>" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="estoque" class="form-label">Estoque *</label>
                            <input type="number" class="form-control" id="estoque" name="estoque" 
                                   value="<%= produto ? produto.estoque : '0' %>" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="categoria" class="form-label">Categoria</label>
                            <select class="form-control" id="categoria" name="categoria">
                                <option value="">Selecione...</option>
                                <% categorias.forEach(cat => { %>
                                    <option value="<%= cat %>" <%= produto && produto.categoria === cat ? 'selected' : '' %>>
                                        <%= cat %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="ativo" class="form-label">Status</label>
                            <select class="form-control" id="ativo" name="ativo">
                                <option value="true" <%= produto && produto.ativo ? 'selected' : '' %>>Ativo</option>
                                <option value="false" <%= produto && !produto.ativo ? 'selected' : '' %>>Inativo</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i>
                            <%= isEdit ? 'Atualizar' : 'Salvar' %>
                        </button>
                    </div>
                </form>
                
                <% if (produto) { %>
                <div class="mt-4 pt-3 border-top text-muted small">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="bi bi-calendar"></i>
                            Criado: <%= new Date(produto.criado_em).toLocaleString('pt-BR') %>
                        </div>
                        <% if (produto.atualizado_em && produto.atualizado_em !== produto.criado_em) { %>
                        <div class="col-md-6">
                            <i class="bi bi-arrow-clockwise"></i>
                            Atualizado: <%= new Date(produto.atualizado_em).toLocaleString('pt-BR') %>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>